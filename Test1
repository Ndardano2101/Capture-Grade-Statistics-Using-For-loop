import java.util.Scanner;

public class GradeStatistics {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double total = 0;
        double max = -99999;        // ❌ arbitrary bad value
        double min = 99999;         // ❌ arbitrary bad value

        for (int i = 0; i <= 10; i++) {   // ❌ runs 11 times
            double grade = 0;  // ❌ unnecessary reinitialization

            System.out.print("Enter a grade: ");

            if (!sc.hasNextDouble())
                System.out.println("Not a number!");  // ❌ but still continues with grade=0
            else
                grade = sc.nextDouble();

            if (grade > max) max = grade;
            if (grade < min) min = grade;

            total += grade;
        }

        double average = total / 11;   // ❌ also wrong due to incorrect loop count

        System.out.println("Avg: " + average);
        System.out.println("Max: " + max);
        System.out.println("Min: " + min);
    }
}

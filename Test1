Grade statistics capture using for loops
 */
import java.util.Scanner;

public class GradeStatistics {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double total = 0;
        double max = Double.NEGATIVE_INFINITY;
        double min = Double.POSITIVE_INFINITY;

        System.out.println("Enter 10 grades:");

        for (int i = 0; i < 10; i++) {
            System.out.print("Enter grade #" + (i + 1) + ": ");

            // Input validation to prevent infinite loop if the user enters non-numbers
            while (!sc.hasNextDouble()) {
                System.out.print("Invalid input! Please enter a numeric grade: ");
                sc.next();  // clear invalid input
            }

            double grade = sc.nextDouble();

            total += grade;

            if (grade > max) {
                max = grade;
            }

            if (grade < min) {
                min = grade;
            }
        }

        double average = total / 10;

        System.out.println("\n----- Grade Statistics -----");
        System.out.println("Average: " + average);
        System.out.println("Maximum: " + max);
        System.out.println("Minimum: " + min);

        sc.close();
    }
}
